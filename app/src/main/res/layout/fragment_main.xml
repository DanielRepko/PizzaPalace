<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jordan.daniel.pizzapalace.MainFragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/dealsContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <EditText
        android:id="@+id/aboutUsTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="@string/about_us_title"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="@dimen/title_text_size" />

    <TextView
        android:id="@+id/aboutUsText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="@string/about_us_text"
        android:textAlignment="center"
        android:textSize="@dimen/about_us_text_size" />

</LinearLayout>
